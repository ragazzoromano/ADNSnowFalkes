<Window x:Class="SnowfallClient.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snowfall Client Controls" Height="800" Width="450"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Connection" FontWeight="Bold" FontSize="16" Grid.Row="0" Grid.ColumnSpan="2" Margin="0 0 0 8"/>

        <TextBlock Text="Server IP" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="ServerIpTextBox" Grid.Row="1" Grid.Column="1" Text="127.0.0.1" Margin="0 0 0 8"/>

        <TextBlock Text="Port" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="PortTextBox" Grid.Row="2" Grid.Column="1" Text="8888" Margin="0 0 0 8"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0 0 0 16">
            <Button x:Name="ConnectButton" Content="Connect" Width="100" Margin="0 0 8 0" Click="OnConnect"/>
            <Button x:Name="DisconnectButton" Content="Disconnect" Width="100" IsEnabled="False" Click="OnDisconnect"/>
            <TextBlock x:Name="ConnectionStatus" Text="Disconnected" VerticalAlignment="Center" Margin="16 0 0 0" Foreground="Red"/>
        </StackPanel>

        <TextBlock Text="Snow density" FontWeight="Bold" FontSize="16" Grid.Row="4" Grid.ColumnSpan="2" Margin="0 0 0 8"/>

        <TextBlock Text="Small" Grid.Row="5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0" Maximum="500" Width="240" Value="{Binding SmallCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding SmallCount}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Medium" Grid.Row="6" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0" Maximum="500" Width="240" Value="{Binding MediumCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding MediumCount}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Large" Grid.Row="7" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0" Maximum="500" Width="240" Value="{Binding LargeCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding LargeCount}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Fall speed" FontWeight="Bold" FontSize="16" Grid.Row="8" Grid.ColumnSpan="2" Margin="0 16 0 8"/>

        <TextBlock Text="Small" Grid.Row="9" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0.4" Maximum="2.5" Width="240" Value="{Binding SmallSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding SmallSpeed, StringFormat=F1}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Medium" Grid.Row="10" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="10" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0.4" Maximum="2.5" Width="240" Value="{Binding MediumSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding MediumSpeed, StringFormat=F1}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Large" Grid.Row="11" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="11" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0.4" Maximum="2.5" Width="240" Value="{Binding LargeSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding LargeSpeed, StringFormat=F1}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Flake size" FontWeight="Bold" FontSize="16" Grid.Row="12" Grid.ColumnSpan="2" Margin="0 16 0 8"/>

        <TextBlock Text="Small" Grid.Row="13" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="13" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0.5" Maximum="2.0" Width="240" Value="{Binding SmallSizeScale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding SmallSizeScale, StringFormat=F2}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Medium" Grid.Row="14" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="14" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0.5" Maximum="2.0" Width="240" Value="{Binding MediumSizeScale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding MediumSizeScale, StringFormat=F2}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Large" Grid.Row="15" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="15" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0.5" Maximum="2.0" Width="240" Value="{Binding LargeSizeScale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding LargeSizeScale, StringFormat=F2}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Blur effect" FontWeight="Bold" FontSize="16" Grid.Row="16" Grid.ColumnSpan="2" Margin="0 16 0 8"/>

        <TextBlock Text="Small" Grid.Row="17" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="17" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0" Maximum="{Binding SmallCount}" Width="240" Value="{Binding SmallBlurCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding SmallBlurCount}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Medium" Grid.Row="18" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="18" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0" Maximum="{Binding MediumCount}" Width="240" Value="{Binding MediumBlurCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding MediumBlurCount}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Large" Grid.Row="19" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="19" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0" Maximum="{Binding LargeCount}" Width="240" Value="{Binding LargeBlurCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding LargeBlurCount}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Blur intensity" Grid.Row="20" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="20" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0" Maximum="3" Width="240" Value="{Binding BlurIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding BlurIntensity, StringFormat=F2}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Appearance" FontWeight="Bold" FontSize="16" Grid.Row="21" Grid.ColumnSpan="2" Margin="0 16 0 8"/>

        <TextBlock Text="Shape" Grid.Row="22" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="22" Grid.Column="1" SelectedIndex="{Binding SnowflakeShape, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch">
            <ComboBoxItem Content="Random (All Shapes)"/>
            <ComboBoxItem Content="Simple (6 branches)"/>
            <ComboBoxItem Content="Side Branches"/>
            <ComboBoxItem Content="Complex"/>
            <ComboBoxItem Content="Delicate"/>
            <ComboBoxItem Content="Star-like"/>
            <ComboBoxItem Content="Circle"/>
        </ComboBox>

        <TextBlock Text="Rotation" Grid.Row="23" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="23" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0" Maximum="3" Width="240" Value="{Binding RotationSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding RotationSpeed, StringFormat=F2}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <TextBlock Text="Line Width" Grid.Row="24" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="24" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Slider Minimum="0.5" Maximum="3" Width="240" Value="{Binding StrokeThickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding StrokeThickness, StringFormat=F2}" Margin="8 0 0 0" Width="40" HorizontalAlignment="Right"/>
        </StackPanel>

        <StackPanel Grid.Row="25" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 16 0 0">
            <Button x:Name="StartButton" Content="Start" Width="100" Margin="0 0 12 0" Click="OnStartClick"/>
            <Button x:Name="PauseResumeButton" Content="Pause" Width="110" Margin="0 0 12 0" Click="OnPauseResumeClick"/>
            <Button x:Name="StopButton" Content="Stop" Width="100" Click="OnStopClick"/>
        </StackPanel>
    </Grid>
</Window>
