<Window x:Class="SnowfallServer.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snowfall Server" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="TCP Server Controls" FontWeight="Bold" FontSize="16" Grid.Row="0" Margin="0 0 0 16"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 16">
            <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <TextBox x:Name="PortTextBox" Width="80" Text="8888" VerticalContentAlignment="Center"/>
            <Button x:Name="StartServerButton" Content="Start Server" Width="100" Margin="16 0 8 0" Click="OnStartServer"/>
            <Button x:Name="StopServerButton" Content="Stop Server" Width="100" IsEnabled="False" Click="OnStopServer"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 0 0 8">
            <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0 0 8 0" FontWeight="Bold"/>
            <TextBlock x:Name="StatusTextBlock" Text="Server stopped" VerticalAlignment="Center"/>
        </StackPanel>

        <GroupBox Grid.Row="3" Header="Server Log" Margin="0 8 0 16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogTextBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12"/>
            </ScrollViewer>
        </GroupBox>

        <Button Grid.Row="4" Content="Show Snowfall Display" Width="150" Click="OnShowDisplay"/>
    </Grid>
</Window>
